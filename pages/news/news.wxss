/* pages/new/new.wxss */
page{
    background-color:#f1f1f1;
}
/*卡片*/
.card{
    background-color:#fff;
    border:1rpx solid #ddd;
    border-radius:20rpx;
    margin:60rpx 20rpx;
    padding:30rpx;
    display:flex;
    flex-direction:column;
}
/*标题*/
.card-title{
  font-size:20px;
  margin-bottom:20rpx;
}
/*日期下划线*/
.card-date{
  font-size:14px;
  color:#ccc;
  padding-bottom:20rpx;
  margin-bottom:20rpx;
  border-bottom:1rpx solid #ddd;
}
/*图片*/
.card-img{
  width:100%;
  height:300rpx;
}
/*描述*/
.card-desc{
  font-size:16px;
  color:#333;
  padding-bottom:20rpx;
  border-bottom:1rpx solid #ddd;
  margin:20rpx 0;
}
/*查看详情*/
.card-read{
  font-size:14px;
  color:#666;
}
