/* pages/home/home.wxss */
/*功能一*/
/*swiper高度不够 390rpx*/
/*image高度不够 390rpx*/
/*移动端：小程序 效果图 390 写 390rpx*/
/*移动项目：vue  390  写 390/2*/
.slider,.slider swiper,.slider image{
    height:390rpx;
    width:100%;
}

/*功能二：九宫格*/
/*父元素弹性布局*/
.index-nav{
    display:flex;
    flex-wrap:wrap;
}
/*子元素弹性布局 image/text*/
.index-nav .nav-item{
    height:200rpx;
    width:33.3333%;
    box-sizing:border-box;
    /*border:1rpx solid #ddd;*/
    /*item子元素弹性布局*/
    display:flex;
    flex-direction:column;
    justify-content:center; 
    align-items:center;
    /*小程序推荐字体大小用 px*/
    font-size:14px;
    /*右侧添加一个边框 底部添加一个边框*/
    border-right:1rpx solid #ccc;
    border-bottom:1rpx solid #ccc; 
}
/*将3 6 9 边框去掉*/
.index-nav .nav-item:nth-child(3),.index-nav .nav-item:nth-child(6),.index-nav .nav-item:nth-child(9){
    border-right:0 none;
}
/*修改图片宽度*/
.nav-item image{
    width:80rpx;
    height:80rpx;
    margin-bottom:10rpx;
}
.divider{
    background:#f1f1f1;
    height:20rpx;
}

