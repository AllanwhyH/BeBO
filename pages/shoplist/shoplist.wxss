/* pages/shoplist/shoplist.wxss */
page{
  background-color:#fff;
}
/*3.商品项目*/
.shop{
  padding:20rpx;
  border-bottom:1rpx solid #ddd;
  display:flex;
  position:relative;
}
/*4.商品图片*/
.shop-img{
  width:160rpx;
  height:160rpx;
  margin-right:20rpx;
}
/*5.商品信息*/
.shop-info{
  width:520rpx;
  display:flex;
  flex-direction:column;
  font-size:12px;
  color:#666;
  line-height:1.5s;
}
/*打分*/
.stop-star{
  position:absolute;
  right:20rpx;
  top:20rpx;
}
.star-after{
  color:#e2e2e2;
}
.star-before{
  color:#f19e38;
  position:absolute;
  top:0;
  right:0;
  width:100%;
  overflow:hidden;
}